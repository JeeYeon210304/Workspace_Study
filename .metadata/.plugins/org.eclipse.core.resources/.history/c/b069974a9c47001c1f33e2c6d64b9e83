package JustForCodeTest;
// 코드 막 연습하는 클라스입니다.
public class testClass {
	public static void main(String[] args) {
		
		// Gugudan();
		StarTower_1();
		
	}
	// *별찍기
	// 왜 원리를 자꾸 까먹냐ㅠㅠ 
	public static void StarTower_1() {
		String star = "*";
		for(int i=1; i<6; i++) {
			for(int j=0; j<i; j++) {
				System.out.print("*");
			}
			System.out.println("");
		}
	}
	// 구구단 5단	
	public static void Gugudan() {
		for(int i = 1; i <= 9; i++){
			System.out.println("5 x " + i + " =  " + 5*i);
		}
				
	}
}
